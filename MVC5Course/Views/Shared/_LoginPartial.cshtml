@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @{
                    var loginInfo = TempData["LoginInfo"] as MVC5Course.Models.LoginVM;
                }
                @if (loginInfo != null)
                {
                    <A>
                        @(loginInfo.Username) 登入成功!!
                    </A>
                }
                else
                {
                    @Html.ActionLink("Hello  " + User.Identity.GetUserName() + "  !", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
                }
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">登出</a></li>
        </ul>
                        }
                    }
                    else
                    {
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("登入", "Login", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
